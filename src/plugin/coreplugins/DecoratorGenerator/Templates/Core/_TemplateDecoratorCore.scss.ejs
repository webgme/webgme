//imports

@import "../../../scss/Widgets/DiagramDesigner/Connector";

$selected-background-color: rgba(219, 234, 252, 0.5);

@mixin <%= decorator.name %>_decorator_core {
  .<%= decorator.name %>-decorator {
    text-align: center;

    text.port-name {
      fill: #000;
      font-size: 11px;

      &.right {
        text-anchor: end;
      }
    }

    .name {
      display: block;
      text-align: center;
      overflow: hidden;
      text-overflow: ellipsis;
      height: 22px;
      width: auto;
    }

    .connector {
      @include connector_basics;

      border-radius: 0px;


      //margin-left: $connector-size / -2;
      left: 50%;

      &.top {
        top: $connector-size / -2;
      }

      &.bottom {
        bottom: $connector-size / -2;
      }

    }

    .connector-container {
      position: absolute;
      top: 0px;
      left: 0px;
      transform-origin: 0 0;
      -webkit-transform-origin: 0 0;
      -moz-transform-origin: 0 0;
    }

  }

  .designer-item {
    &.selected {
      .<%= decorator.name %>-decorator {
        background-color: $selected-background-color;
      }
    }
  }
}