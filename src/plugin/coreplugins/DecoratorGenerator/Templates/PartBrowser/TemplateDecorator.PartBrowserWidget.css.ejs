.<%= decorator.name %>-decorator {
  text-align: center; }
  .<%= decorator.name %>-decorator text.port-name {
    fill: #000;
    font-size: 11px; }
    .<%= decorator.name %>-decorator text.port-name.right {
      text-anchor: end; }
  .<%= decorator.name %>-decorator .name {
    display: block;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 22px;
    width: auto; }
  .<%= decorator.name %>-decorator .connector {
    background-color: #fefefe;
    height: 10px;
    width: 10px;
    position: absolute;
    cursor: pointer;
    border: 1px solid blue;
    border-radius: 0px;
    left: 50%; }
    .<%= decorator.name %>-decorator .connector:hover {
      border-color: rgba(82, 168, 236, 0.8);
      -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
      -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6); }
    .<%= decorator.name %>-decorator .connector.top {
      top: -6px; }
    .<%= decorator.name %>-decorator .connector.bottom {
      bottom: -6px; }
  .<%= decorator.name %>-decorator .connector-container {
    position: absolute;
    top: 0px;
    left: 0px;
    transform-origin: 0 0;
    -webkit-transform-origin: 0 0;
    -moz-transform-origin: 0 0; }

.designer-item.selected .<%= decorator.name %>-decorator {
  background-color: rgba(219, 234, 252, 0.5); }
